<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textColor="@color/black"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_version"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="首页"
            android:textColor="@color/black"
            android:textSize="30sp" />

    <Button
            android:id="@+id/btn_h_login"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:background="@drawable/fillet_style_button_selector"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:padding="10dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20sp" />

    <Button
            android:id="@+id/btn_h_register"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_h_login"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/fillet_style_button_selector"
            android:maxLines="1"
            android:padding="10dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="20sp" />



    <Button
            android:id="@+id/btn_h_setting"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_h_register"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/fillet_style_button_selector"
            android:maxLines="1"
            android:padding="10dp"
            android:text="识别设置"
            android:textColor="@color/white"
            android:textSize="20sp" />

    <Button
            android:id="@+id/btn_h_back"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_h_setting"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/fillet_style_button_selector"
            android:maxLines="1"
            android:padding="10dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="20sp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp">

        <TextView
                android:id="@+id/tv_socket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socket连接状态：  "
                android:textColor="@color/black"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/tv_socket_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未启用"
                android:textColor="@color/black"
                android:textSize="20sp" />

    </LinearLayout>
</RelativeLayout>